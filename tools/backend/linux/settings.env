# This file is just an example that you may use as a template.
# Substitute the variables' values with those appropriate for your server.

ODE_DB_USER=db_user
ODE_DB_PASS=db_password
ODE_DB_NAME=ode_database
ODE_ROOT_PASS=ode_root_password
ODE_DATA_DIR=/ODE

export ODE_DB_USER ODE_DB_PASS ODE_DB_NAME ODE_ROOT_PASS ODE_DATA_DIR

export PGPASSWORD="$ODE_DB_PASS"

# Location of the ODE.server
export ODEDIR=/opt/ode/server/ODE.server

# Location of the virtual environment for ode-py
VENV_SERVER=/opt/ode/server/venv3

export PATH=$VENV_SERVER/bin:$PATH